---
interface Props {
  title: string;
}
const { title } = Astro.props;
---

<details class="group border-b border-kakahu/30">
  <summary class="flex justify-between items-center font-medium cursor-pointer list-none py-4 text-lg hover:text-ako transition-colors">
    <span class="font-serif text-whenua group-hover:text-ako">{ title }</span>
    <span class="transition group-open:rotate-180">
      <svg fill="none" height="24" shape-rendering="geometricPrecision" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" viewBox="0 0 24 24" width="24"><path d="M6 9l6 6 6-6"></path></svg>
    </span>
  </summary>
  <div class="text-whenua/80 mt-2 mb-6 font-sans leading-relaxed space-y-4">
    <slot />
  </div>
</details>